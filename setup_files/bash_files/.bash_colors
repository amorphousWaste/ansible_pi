function _color_ref () {
    # Show all the avaiable color variables
    # Used for reference
    for i in `seq 0 9`
        do echo -e "\033[${i}mCOLOR FOR $i\033[0m"
    done

    for i in `seq 30 36`
        do echo -e "\033[${i}mCOLOR FOR $i\033[0m"
    done

    for i in `seq 40 47`
        do echo -e "\033[${i}mCOLOR FOR $i\033[0m"
    done

    for i in `seq 90 96`
        do echo -e "\033[${i}mCOLOR FOR $i\033[0m"
    done

    for i in `seq 100 107`
        do echo -e "\033[${i}mCOLOR FOR $i\033[0m"
    done
}

